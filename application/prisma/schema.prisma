generator client {
  provider = "prisma-client-js"
}



// =======================================================
// DEFINE DATABASE (PROVIDER AND DATABASE URL)
// =======================================================
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



// =======================================================
// DEFINE TABEL USER
// =======================================================
model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("users")
}